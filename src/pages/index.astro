];
---

<Layout title='La selección'>
  <Sidebar /> <!-- Sidebar Fijo -->
  <div class="ml-64 flex flex-col min-h-screen"> <!-- Espacio para el Sidebar -->
    <Header client:only="react" />
    <header class="text-center py-6 bg-[url('/img/image1.png')] bg-cover bg-center text-yellow-400 text-2xl">
      LA SELECCIÓN
    </header>
    <main class="container mx-auto px-4 py-8 flex-grow">
      <div class="bg-blue-800 text-white p-6 rounded-lg shadow-lg mb-8">
        <h2 class="text-xl font-semibold mb-4">Selecciona un jugador</h2>
        <!-- Puedes agregar contenido interactivo aquí -->
      </div>

      <PlayersField jugadores={jugadores} /> <!-- Componente de la Cancha y Jugadores -->
    </main>
  </div>
</Layout>
