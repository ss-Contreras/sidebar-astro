import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.jsx';
import Sidebar from '../components/Sidebar.jsx';
import PlayersField from '../components/PlayersField.jsx';

const jugadores = [
  { nombre: 'C.VARGAS', numero: 1, posicion: 'portero', imagen: 'pepe.png' },
  { nombre: 'C.CUESTA', numero: 2, posicion: 'defensa', imagen: 'pepe.png' },
  { nombre: 'D.SÁNCHEZ', numero: 23, posicion: 'defensa', imagen: 'pepe.png' },
  { nombre: 'S.ARIAS', numero: 4, posicion: 'defensa', imagen: 'pepe.png'},
  { nombre: 'J.MOJICA', numero: 17, posicion: 'defensa', imagen: 'pepe.png' },
  { nombre: 'R.RIOS', numero: 6, posicion: 'medio-defensivo', imagen: 'pepe.png' },
  { nombre: 'J.LERMA', numero: 16, posicion: 'medio-defensivo', imagen: 'pepe.png' },
  { nombre: 'J.RODRÍGUEZ', numero: 10, posicion: 'medio-ofensivo', imagen: 'pepe.png' },
  { nombre: 'J,ARIAS', numero: 11, posicion: 'medio-ofensivo', imagen: 'pepe.png' },
  { nombre: 'L.DÍAZ', numero: 7, posicion: 'medio-ofensivo', imagen: 'pepe.png' },
